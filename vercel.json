{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "VITE_APP_GEMINI_API_KEY": "@vite_app_gemini_api_key",
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_API_BASE_URL": "@vite_api_base_url",
    "VITE_APP_GA_MEASUREMENT_ID": "@vite_app_ga_measurement_id",
    "VITE_BLOGGER_API_KEY": "@vite_blogger_api_key",
    "VITE_BLOG_ID": "@vite_blog_id"   
}
